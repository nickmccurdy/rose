extends layout

mixin displayExample(example)
  b #{example.technology}: 
  if typeof example.code === 'string'
    code= example.code
  else
    each str in example.code
      code= str

block content
  .container

    // navbar
    nav.navbar.navbar-default(role='navigation')
      a.navbar-brand(href='#') Rose

    // search form
    form.input-group.input-group-lg(role='search')
      input.form-control(type='text', name='query', placeholder='Search for a method, function, or command', autofocus='')
      .input-group-btn
        button.btn.btn-primary(type='submit')
          span.glyphicon.glyphicon-search
    // results
    h2 Results
    ol: each example in examples
      li
        +displayExample(example)

    // footer
    hr
    footer
      | &copy; 2014 
      a(href='http://thenickperson.com') Nicolas McCurdy
