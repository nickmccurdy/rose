extends layout

mixin displayFeature(feature)
  h3= feature.name
  dl: each key in Object.keys(feature.examples)
    +displayExample({ technology: key, code: feature.examples[key]})

mixin displayExample(example)
  dt #{example.technology}
  dd
    if typeof example.code === 'string'
      code= example.code
    else
      each str in example.code
        code= str
        br

block content
  // search form
  form.input-group.input-group-lg(role='search')
    input.form-control(type='search', name='query', placeholder='Search for a method, function, or command', autofocus)
    .input-group-btn
      button.btn.btn-primary(type='submit')
        span.glyphicon.glyphicon-search

  // results
  h2 Results
  if features.length > 0
    ol: each feature in features
      li: +displayFeature(feature)
  else
    h3.text-muted No results
