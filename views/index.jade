extends layout

mixin displayResult(result)
  b #{result.technology}: 
  if typeof result.name === 'string'
    code= result.name
  else
    each str in result.name
      code= str

block content
  .container

    // navbar
    nav.navbar.navbar-default(role='navigation')
      a.navbar-brand(href='#') Rose

    // search form
    form.input-group.input-group-lg(role='search')
      input.form-control(type='text', name='query', placeholder='Search for a method, function, or command', autofocus='')
      .input-group-btn
        button.btn.btn-primary(type='submit')
          span.glyphicon.glyphicon-search
    // results
    h2 Results
    ul: each result in results
      li
        +displayResult(result)

    // footer
    hr
    footer
      | &copy; 2014 
      a(href='http://thenickperson.com') Nicolas McCurdy
